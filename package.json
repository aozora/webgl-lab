{
  "name": "webgl-lab",
  "version": "1.0.0",
  "description": "My personal WebGL laboratory",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --max-warnings 0",
    "format": "prettier --write .",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\" \"npm run storybook\"",
    "client:dev": "vite",
    "server:dev": "ts-node-dev --project tsconfig.server.json src/server",
    "server:build": "tsc --project tsconfig.server.json",
    "client:build": "vite build",
    "storybook:build": "build-storybook -o dist/storybook",
    "build": "npm run server:build && npm run client:build && npm run storybook:build",
    "serve": "vite preview",
    "prepare": "husky install",
    "test": "tsc && prettier --check . && eslint . && stylelint \"**/*.css\"",
    "storybook": "start-storybook -p 6006",
    "start": "node dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aozora/webgl-lab.git"
  },
  "keywords": [
    "webgl",
    "three.js",
    "react"
  ],
  "author": "marcello-palmitessa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aozora/webgl-lab/issues"
  },
  "homepage": "https://github.com/aozora/webgl-lab#readme",
  "lint-staged": {
    "*.@(js|jsx|ts|tsx)": [
      "npm run lint",
      "npm run format",
      "npm run type-check"
    ]
  },
  "dependencies": {
    "@react-spring/three": "^9.3.1",
    "@react-three/drei": "^7.25.3",
    "@react-three/fiber": "^7.0.21",
    "@react-three/postprocessing": "^2.0.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "gsap": "npm:@gsap/shockingly@^3.8.0",
    "leva": "^0.9.16",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "simplex-noise": "^3.0.0",
    "three": "^0.135.0",
    "web-vitals": "^2.1.2",
    "zustand": "^3.6.5"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@storybook/addon-actions": "^6.4.0-beta.19",
    "@storybook/addon-essentials": "^6.4.0-beta.19",
    "@storybook/addon-links": "^6.4.0-beta.19",
    "@storybook/react": "^6.4.0-beta.19",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.4",
    "@types/react": "^17.0.32",
    "@types/react-dom": "^17.0.10",
    "@types/react-router-dom": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "babel-loader": "^8.2.3",
    "concurrently": "^6.3.0",
    "css-loader": "^6.5.1",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "file-loader": "^6.2.0",
    "glslify-loader": "^2.0.0",
    "http-proxy-middleware": "^2.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.4",
    "prettier": "2.4.1",
    "resolve-url-loader": "^4.0.0",
    "sass": "^1.44.0",
    "sass-loader": "12.3.0",
    "storybook-builder-vite": "^0.1.2",
    "style-loader": "^3.3.1",
    "stylelint": "^14.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^23.0.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4",
    "vite": "^2.6.10"
  },
  "browserslist": [
    ">3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
  ]
}
